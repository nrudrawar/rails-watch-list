<div class="mt-4">
  <div class="d-flex justify-content-between">
    <h1><%= @list.name %> </h1>
    <div>
      <%= link_to 'Add a movie', new_list_bookmark_path(@list), class:"btn btn-primary"%>
    </div>
  </div>
  <div>
    <% @list.bookmarks.each do |bookmark| %>
      <h4><%= bookmark.movie.title %></h4>
    <% end %>
  </div>
</div>

